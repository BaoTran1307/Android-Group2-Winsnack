<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (light gray to match the item background in the image) -->
    <solid android:color="#F5F5F5" />

    <!-- Rounded corners with 8dp radius -->
    <corners android:radius="8dp" />

    <!-- Optional: Add a subtle stroke for better definition -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Optional: Add padding to ensure content doesn't touch the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>