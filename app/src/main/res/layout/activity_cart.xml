<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:background="@drawable/rounded_top_corners"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:contentDescription="Cart Icon"
            android:src="@drawable/ic_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Divider -->

    <!-- Item Count -->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="500dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/layoutTotal"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/tvItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="You have 2 items in the cart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:ignore="MissingConstraints" />

    <!-- ScrollView for Cart Items -->

    <!-- Divider -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF9800"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvItemCount"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/llCartItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hardcoded items (can be replaced with dynamic content) -->
            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

            <include layout="@layout/item_cart" />

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/layoutTotal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Total Layout -->
    <LinearLayout
        android:id="@+id/layoutTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnCheckout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$40.00"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="25dp" />
    </LinearLayout>

    <!-- Checkout Button -->
    <Button
        android:id="@+id/btnCheckout"
        android:text="Checkout"
        android:textColor="#FF9800"
        android:backgroundTint="?attr/colorSecondary"
        app:cornerRadius="24dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>