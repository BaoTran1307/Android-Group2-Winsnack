<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9413">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="358dp"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/winsnack_logo" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Got cravings? Tap into Win Snack\nwhere every bite is dangerously delicious!"
            android:textColor="#5A2800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="One bite and you’ll be hooked!"
            android:textColor="#3C1C00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nút Log In -->
        <Button
            android:id="@+id/btn_log_in"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFE0C2"
            android:fontFamily="sans-serif"
            android:text="@string/title_log_in"
            android:textColor="#FF9413"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Nút Sign Up -->
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFE0C2"
            android:fontFamily="sans-serif"
            android:text="@string/title_sign_up"
            android:textColor="#FF9413"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Continue as Guest -->
        <TextView
            android:id="@+id/btn_continue_as_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Continue as Guest"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />
    </LinearLayout>
</RelativeLayout>