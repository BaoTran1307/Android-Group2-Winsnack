<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Blog"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content (Scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_top_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover the dishes recommended by the chef."
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Blog Item 1 (Single in first row) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="#FFF3E0"
                android:padding="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_blog1"
                    android:contentDescription="Blog 1 Image"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Blog"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to Make Saigon-Style Mixed Rice Paper"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you ready to make your own delicious homemade rice paper, just like the original Saigon flavor?"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnReadBlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read Blog"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF5722"
                    android:layout_gravity="end"
                    android:padding="6dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Blog Item 2 and 3 (Two in second row) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_blog2"
                        android:contentDescription="Blog 2 Image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Secret to Combining Snacks"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover how to turn your favorite snacking into a next-level experience!"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_blog3"
                        android:contentDescription="Blog 3 Image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy DIY Crispy Cheese Rice Paper Rolls"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crunchy, cheesy, and totally addictive — you won’t believe how easy these are to make!"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Blog Item 4 and 5 (Two in third row) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_blog4"
                        android:contentDescription="Blog 4 Image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover how to turn your favorite snacking"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover how to turn your favorite snacking into a next-level experience!"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_blog5"
                        android:contentDescription="Blog 5 Image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy DIY Crispy Cheese Rice Paper Rolls"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crunchy, cheesy, and totally addictive — you won’t believe how easy these are to make!"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>