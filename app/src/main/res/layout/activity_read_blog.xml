<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Read Blog"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content (Scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_top_background">

            <!-- Blog Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF3E0"
                android:padding="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@mipmap/ic_blog1"
                    android:contentDescription="Saigon-Style Mixed Rice Paper" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chef Anh Nguyen"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 min"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to Make Saigon-Style Mixed Rice Paper"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you ready to make your own delicious homemade mixed rice paper, just like the original Saigon flavor? Let’s dive into this fun and flavorful snack that’s been a street food favorite for generations in Vietnam! 🌱"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients You'll Need:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here's what you should prepare (feel free to adjust depending on your taste!):"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍚 Rice paper (bánh tráng) – cut into thin strips"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍤 Dried shredded mango or tamarind sauce – for a sweet and tangy twist"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🥚 Quail eggs, boiled and peeled – savory umami punch"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍖 Beef jerky or shredded dried beef"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌶️ Chili flakes – for those who love the heat"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍃 Lime juice – to brighten up all the flavors"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌿 Vietnamese coriander (rau răm) – fresh and peppery"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧂 Salt, sugar, seasoning powder – for perfect balance"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Related Blogs Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Related Blog (2)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF9413"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_blog2"
                        android:contentDescription="Easy DIY Crispy Cheese Rice Paper Rolls" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy DIY Crispy Cheese Rice Paper Rolls"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFF3E0"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_blog3"
                        android:contentDescription="Combining Snacks for The Perfect Munchies" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combining Snacks for The Perfect Munchies"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Blog"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:layout_gravity="end"
                        android:padding="6dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>