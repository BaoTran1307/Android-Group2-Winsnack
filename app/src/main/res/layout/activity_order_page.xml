<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCF59"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/title_order_page"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_centerHorizontal="true"
                android:text="How Can We Help You?"
                android:textAlignment="center"
                android:textColor="#FF9413"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp" />
        </RelativeLayout>

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="#F6F6F6"
            android:padding="12dp"
            android:backgroundTint="#EEEEEE"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:background="@null"
                android:padding="0dp"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- FAQ items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- SALES POLICY -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/title_blog"
                android:textColor="#FF9413"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#FFDDC1" />

            <!-- RETURN POLICY -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/title_contact"
                android:textColor="#FF9413"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#FFDDC1" />

            <!-- SHIPPING POLICY -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/title_policy"
                android:textColor="#FF9413"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#FFDDC1" />

            <!-- PRIVACY POLICY -->

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#FFDDC1" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
