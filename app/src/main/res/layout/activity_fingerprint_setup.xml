<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Set Your Fingerprint"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@drawable/rounded_top_background"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Description Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use your fingerprint to quickly and securely access your account. Place your finger on the sensor to register your fingerprint."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="60dp" />

        <!-- Fingerprint Icon Container -->
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp">

            <!-- Background Circle -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@mipmap/ic_finger1" />

            <!-- Fingerprint Icon -->
            <ImageView
                android:id="@+id/iv_fingerprint"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="@color/orange_light" />

        </RelativeLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <!-- Skip Button -->
            <Button
                android:id="@+id/btn_skip"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:text="Skip"
                android:textColor="@color/orange_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9413"
                android:text="@string/continue_text"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>