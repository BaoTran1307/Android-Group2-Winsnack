<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/footer_background"
        android:paddingHorizontal="12dp">

        <!-- Các nút navigation -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_navi1" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_navi2" />

        <ImageButton
            android:id="@+id/btnChatbot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:src="@mipmap/ic_navi3"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnEvent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:src="@mipmap/ic_navi4"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnOthers"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:src="@mipmap/ic_navi5"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- Nút chatbot nổi -->
    <ImageButton
        android:id="@+id/imgChatbot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_chatbot"
        android:elevation="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless" />
</FrameLayout>