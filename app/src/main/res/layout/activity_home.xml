<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E4">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#FFC107"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snack Time with Win Snack!"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Search Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_search_rounded"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="6dp">

                        <EditText
                            android:id="@+id/search_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@android:drawable/ic_menu_search"
                            android:drawablePadding="8dp"
                            android:hint="Search"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="0dp"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/voice_button"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginStart="4dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/ic_voice" />

                        <ImageButton
                            android:id="@+id/filter_button"
                            android:layout_width="27dp"
                            android:layout_height="23dp"
                            android:layout_marginStart="4dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/ic_filter" />
                    </LinearLayout>

                    <!-- Right Icons -->
                    <ImageButton
                        android:id="@+id/cart_button"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_cart" />

                    <ImageButton
                        android:id="@+id/notification_button"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_notification" />

                    <ImageButton
                        android:id="@+id/profile_button"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_profile" />
                </LinearLayout>
            </LinearLayout>

            <!-- Categories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Category BT01 -->
                    <LinearLayout
                        android:id="@+id/mixed_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@mipmap/ic_mixed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mixed"
                            android:clickable="false"
                            android:focusable="false"
                            android:textColor="#391713"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Category BT02 -->
                    <LinearLayout
                        android:id="@+id/grilled_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@mipmap/ic_grilled" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Grilled"
                            android:textColor="#391713"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Category BT03 -->
                    <LinearLayout
                        android:id="@+id/sweet_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@mipmap/ic_sweet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sweet"
                            android:textColor="#391713"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Category BT04 -->
                    <LinearLayout
                        android:id="@+id/combo_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@mipmap/ic_combo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Combo"
                            android:textColor="#391713"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Category BT05 -->
                    <LinearLayout
                        android:id="@+id/ingredients_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@mipmap/ic_ingredients" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ingredients"
                            android:textColor="#391713"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Best Seller -->
            <LinearLayout
                android:id="@+id/best_seller_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tiêu đề và View All -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Seller"
                        android:textColor="#FF5722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/best_seller_view_all"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="View All >"
                        android:textColor="#FF5722"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- RecyclerView cho Best Seller -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/best_seller_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </LinearLayout>

            <!-- Promo Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/banner_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/banner_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:tabBackground="@drawable/dot_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />
            </LinearLayout>

            <!-- Recommend -->
            <LinearLayout
                android:id="@+id/recommend_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tiêu đề và View All -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommend"
                        android:textColor="#FF5722"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/recommend_view_all"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="View All >"
                        android:textColor="#FF5722"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- RecyclerView cho Recommend -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommend_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Include footer -->
    <include layout="@layout/footer_layout" />

